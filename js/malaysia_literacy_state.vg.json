{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "config": {
      "background": "#FFFFE0",
      "axis": {
        "labelFont": "Arial",
        "titleFont": "Arial"
      },
      
      "title": {
        "font": "Arial",
        "fontSize": 16,
        "fontWeight": "bold",
        "color": "#000080"
      },
      "legend": {
        "labelFont": "Verdana",
        "titleFont": "Verdana"
      }
    },
  "params": [
    {
      "name": "Gender",
      "value": "Male",
      "bind": {
        "input": "select",
        "options": ["Male", "Female"],
        "labels": ["Male Data", "Female Data"]
      }
    },
    {
      "name": "DataField",
      "value": "Literacy Rate",
      "bind": {
        "input": "select",
        "options": [
          "Literacy Rate",
          "Primary Enrolment",
          "Secondary Enrolment",
          "Primary Completion Rate",
          "Secondary Completion Rate"
        ],
        "labels": [
          "Literacy Rate",
          "Primary Enrolment",
          "Secondary Enrolment",
          "Primary Completion Rate",
          "Secondary Completion Rate"
        ]
      }
    }
  ],
  "vconcat": [
    {
      "title": "Malaysia's Literacy, Enrolment, and Completion Rates by State (2019)",
      "width": 600,
      "height": 500,
      "projection": {"type": "equalEarth"},
      "data": {
        "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit3179-Asgn2/refs/heads/main/js/geoBoundaries-MYS-ADM1.topojson",
        "format": {"type": "topojson", "feature": "MYSADM1gbOpen"}
      },
      "transform": [
        {
          "lookup": "properties.shapeName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit3179-Asgn2/refs/heads/main/data/Malaysia_States_Literacy_2019.csv"
            },
            "key": "Country",
            "fields": [
              "MaleLiteracyRate", "FemaleLiteracyRate",
              "MalePrimaryEnrolement", "FemalePrimaryEnrolment",
              "MaleSecondaryEnrolement", "FemaleSecondaryEnrolment",
              "MalePrimaryCompletionRate", "FemalePrimaryCompletionRate",
              "MaleSecondaryCompletionRate", "FemaleSecondaryCompletionRate"
            ]
          }
        },
        {
          "calculate": "datum.MalePrimaryEnrolement / 10000",
          "as": "NormalizedMalePrimaryEnrolement"
        },
        {
          "calculate": "datum.FemalePrimaryEnrolment / 10000",
          "as": "NormalizedFemalePrimaryEnrolment"
        },
        {
          "calculate": "datum.MaleSecondaryEnrolement / 10000",
          "as": "NormalizedMaleSecondaryEnrolment"
        },
        {
          "calculate": "datum.FemaleSecondaryEnrolment / 10000",
          "as": "NormalizedFemaleSecondaryEnrolment"
        }
      ],
      "resolve": {
        "legend": {"color": "independent"},
        "scale": {"color": "independent"}
      },
      "layer": [
        {
          "transform": [
            {
              "filter": "(Gender === 'Male' && DataField === 'Literacy Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "MaleLiteracyRate",
              "type": "quantitative",
              "scale": {"domain": [80, 100], "range": ["#FFFFCC", "#006837"]},
              "legend": {
                "title": "M Literacy 80-100(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "MaleLiteracyRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Male Literacy Rate (%)"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Female' && DataField === 'Literacy Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "FemaleLiteracyRate",
              "type": "quantitative",
              "scale": {"domain": [80, 100], "range": ["#FFFFCC", "#006837"]},
              "legend": {
                "title": "F Literacy 80-100(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "FemaleLiteracyRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Female Literacy Rate (%)"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Male' && DataField === 'Primary Enrolment')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "NormalizedMalePrimaryEnrolement",
              "type": "quantitative",
              "scale": {"domain": [0, 30], "range": ["#D1E5F0", "#2166AC"]},
              "legend": {
                "title": "M Primary enrol 1-10000",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "MalePrimaryEnrolement",
                "type": "quantitative",
                "format": ".0f",
                "title": "Male Primary Enrolment"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Female' && DataField === 'Primary Enrolment')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "NormalizedFemalePrimaryEnrolement",
              "type": "quantitative",
              "scale": {"domain": [0, 30], "range": ["#D1E5F0", "#2166AC"]},
              "legend": {
                "title": "F Primary enrol 1-10000",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "FemalePrimaryEnrolment",
                "type": "quantitative",
                "format": ".0f",
                "title": "Female Primary Enrolment"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Male' && DataField === 'Secondary Enrolment')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "NormalizedMaleSecondaryEnrolment",
              "type": "quantitative",
              "scale": {"domain": [0, 20], "range": ["#FEE0D2", "#99000D"]},
              "legend": {
                "title": "M Secondary enrol 1-10000",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "MaleSecondaryEnrolement",
                "type": "quantitative",
                "format": ".0f",
                "title": "Male Secondary Enrolment"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Female' && DataField === 'Secondary Enrolment')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "NormalizedFemaleSecondaryEnrolment",
              "type": "quantitative",
              "scale": {"domain": [0, 20], "range": ["#FEE0D2", "#99000D"]},
              "legend": {
                "title": "F Secondary enrol 1-10000",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "FemaleSecondaryEnrolment",
                "type": "quantitative",
                "format": ".0f",
                "title": "Female Secondary Enrolment"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Male' && DataField === 'Primary Completion Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "MalePrimaryCompletionRate",
              "type": "quantitative",
              "scale": {"domain": [80, 110], "range": ["#FFFFE0", "#0000FF"]},
              "legend": {
                "title": "M Primary 80-110(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "MalePrimaryCompletionRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Male Primary Completion Rate (%)"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Female' && DataField === 'Primary Completion Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "FemalePrimaryCompletionRate",
              "type": "quantitative",
              "scale": {"domain": [80, 110], "range": ["#FFFFE0", "#0000FF"]},
              "legend": {
                "title": "F Primary 80-110(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "FemalePrimaryCompletionRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Female Primary Completion Rate (%)"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Male' && DataField === 'Secondary Completion Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "MaleSecondaryCompletionRate",
              "type": "quantitative",
              "scale": {"domain": [80, 110], "range": ["#FFA500", "#800080"]},
              "legend": {
                "title": "M Secondary 80-110(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "MaleSecondaryCompletionRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Male Secondary Completion Rate (%)"
              }
            ]
          }
        },
        {
          "transform": [
            {
              "filter": "(Gender === 'Female' && DataField === 'Secondary Completion Rate')"
            }
          ],
          "mark": {"type": "geoshape", "stroke": "black"},
          "encoding": {
            "color": {
              "field": "FemaleSecondaryCompletionRate",
              "type": "quantitative",
              "scale": {"domain": [80, 110], "range": ["#FFA500", "#800080"]},
              "legend": {
                "title": "F Secondary 80-110(%)",
                "orient": "right",
                "direction": "horizontal",
                "gradientLength": 200,
                "titleFont": "Verdana",
                "labelFont": "Verdana"
              }
            },
            "tooltip": [
              {"field": "properties.shapeName", "type": "nominal", "title": "State"},
              {
                "field": "FemaleSecondaryCompletionRate",
                "type": "quantitative",
                "format": ".1f",
                "title": "Female Secondary Completion Rate (%)"
              }
            ]
          }
        }
      ]
    }

  ]
}
