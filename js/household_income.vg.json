{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "config": {
      "background": "#de9e2f",
      "axis": {
        "labelFont": "Arial",
        "titleFont": "Arial"
      },
      "title": {
        "font": "Arial",
        "fontSize": 16,
        "fontWeight": "bold",
        "color": "#333"
      },
      "legend": {
        "labelFont": "Arial",
        "titleFont": "Arial"
      }
    },
    "vconcat": [
      {
        "title": "Income Means over the years (2016-2022)",
        "width": 400,
        "height": 400,
        "data": {
          "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit3179-Asgn2/refs/heads/main/data/hh_income_state.csv"
        },
        "mark": {
          "type": "area",
          "tooltip": true
        },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "axis": {"title": "Year"},
            "scale": {"domain": ["2015-12-31", "2022-01-01"]}
          },
          "y": {
            "field": "income_mean",
            "type": "quantitative",
            "axis": {"title": "Mean Income"}
          },
          "color": {
            "field": "state",
            "type": "nominal",
            "scale": {
              "range": ["#1b9e77", "#d95f02", "#7570b3", "#e7298a", "#66a61e", "#e6ab02", "#a6761d", "#666666", "#8c564b", "#17becf", "#bcbd22", "#7f7f7f", "#ff7f0e", "#2ca02c", "#9467bd", "#c5b0d5"]
            },
            "legend": {"title": "State", "orient": "right", "direction": "vertical", "gradientLength": 200}
          },
          "tooltip": [
            {"field": "date", "type": "temporal", "title": "Year"},
            {"field": "income_mean", "type": "quantitative", "title": "Mean Income"},
            {"field": "state", "type": "nominal", "title": "State"}
          ]
        },
        "transform": [
          {"filter": "year(datum.date) >= 2016 && year(datum.date) <= 2022"}
        ]
      },
      {
        "title": "Households Over the Years (2016-2022)",
        "width": 400,
        "height": 400,
        "data": {
          "url": "https://raw.githubusercontent.com/ShyunKhern32842333/Fit3179-Asgn2/refs/heads/main/data/hh_lq_state.csv"
        },
        "transform": [
          {"filter": "year(datum.date) >= 2016 && year(datum.date) <= 2022"}
        ],
        "mark": "bar",
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "axis": {"title": "Year"}
          },
          "y": {
            "field": "households",
            "type": "quantitative",
            "axis": {"title": "Number of Households"}
          },
          "color": {
            "field": "state",
            "type": "nominal",
            "scale": {
              "range": ["#1b9e77", "#d95f02", "#7570b3", "#e7298a", "#66a61e", "#e6ab02", "#a6761d", "#666666", "#8c564b", "#17becf", "#bcbd22", "#7f7f7f", "#ff7f0e", "#2ca02c", "#9467bd", "#c5b0d5"]
            },
            "legend": {"title": "State", "orient": "right", "direction": "vertical"}
          },
          "tooltip": [
            {"field": "date", "type": "temporal", "title": "Year"},
            {"field": "households", "type": "quantitative", "title": "Number of Households"},
            {"field": "state", "type": "nominal", "title": "State"}
          ]
        }
      }
    ]
  }
  